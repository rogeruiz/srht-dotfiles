# Terminal
#
export TERM="tmux-256color"

# Text Editor
#
export EDITOR="nvim"


# Homebrew
#
export PATH=/usr/local/opt/python/libexec/bin:/usr/local/bin:/usr/local/sbin:$PATH

# Composer
#
export PATH=$HOME/.composer/vendor/bin:$PATH

# Path for RVM
#
export PATH=$HOME/.rvm/bin:$PATH

# Path for `go get`
#
export GOPATH=$HOME/Developer/golang
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin

# Path for `cargo install`
#
export PATH=$PATH:~/.cargo/bin

# Path for `roswell install`
#
export PATH=$PATH:~/.roswell/bin

# Local binaries go last
#
export PATH=/Users/yo/.local/bin:/Users/yo/.local/bin/darwin:$PATH

CC=$(which gcc-11)

# For Python3+ pipenv projects
# https://pipenv.pypa.io/en/latest/diagnose/#valueerror-unknown-locale-utf-8
#
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Disable Tmux auto-titling of windows
#
export DISABLE_AUTO_TITLE=true

# Bat Theme is set by current_visual_mode on startup so it's no longer needed
# in this file.

# The nnn varibles needed
export NNN_OPTS="dceH" # 'H' shows the hidden files. Same as option -H (so 'nnn -deH')
export LC_COLLATE="C" # hidden files on top
export NNN_FIFO="/tmp/nnn.fifo" # temporary buffer for the previews
export NNN_FCOLORS="AAAAE631BBBBCCCCDDDD9999" # feel free to change the colors
export NNN_PLUG='p:preview-tui' # many other plugins are available here: https://github.com/jarun/nnn/tree/master/plugins

# NOTE: Configura a RIPGREP con un archivo customizado
# https://github.com/BurntSushi/ripgrep/blob/master/GUIDE.md#configuration-file
export RIPGREP_CONFIG_PATH=~/.ripgreprc
